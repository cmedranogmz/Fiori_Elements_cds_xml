<mvc:View controllerName="productsfpm.ext.main.Main"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:macros="sap.fe.macros"
    xmlns:html="http://www.w3.org/1999/xhtml">
    <f:DynamicPage id="dynamicPage">
        <f:title>
            <f:DynamicPageTitle id="DynamicPageTitle">
                <f:heading>
                <Title id="title" text="{i18n>appTitle}" wrapping="true"/>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader id="DynamicPageHeader">
                <macros:FilterBar id="filters" metaPath="@com.sap.vocabularies.UI.v1.SelectionFields"/>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <macros:Table id="table" metaPath="@com.sap.vocabularies.UI.v1.LineItem" filterBar="filters"/>
        </f:content>
    </f:DynamicPage>
</mvc:View>
